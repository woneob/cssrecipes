doctype html
html(lang=config.language)
  head
    meta(charset='utf-8')
    title
      = page.title ? page.title + ' - ' : ''
      = config.title
    link(
      rel='stylesheet'
      href='/cssrecipes/styles/styles.css')

    if page.css !== undefined && page.css.length
      each css in page.css
        link(
          rel='stylesheet'
          href=css)

    link(
      rel='icon'
      href='/cssrecipes/images/icons/favicon.ico')

  body
    #menu-outer
      nav#menu-inner
        each url, label in theme.menu
          a(href=url)= label
    #content-outer
      #content-inner
        if body
          div!= body
        else
          block content
    #bottom-outer
      #bottom-inner
        span Site construction by
        span= ' ' + config.author + ' '
        span using
        a(href='http://hexo.io')
          span hexo blog framework
        span .
        br
        a(href=config.root) Home
    if theme.scripts !== undefined && theme.scripts.length > 0
      //- scripts list from config.yml
      each url in theme.scripts
        script(src=url)
